---
import '../styles/global.css';
import { generateWebsiteStructuredData } from '../utils/seo';

export interface Props {
  title: string;
  description?: string;
  image?: string;
  lang?: 'zh' | 'en';
  structuredData?: string;
}

const { title, description, image, lang = 'zh', structuredData } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);

// Default description for better SEO
const defaultDescription = "黄药师的个人技术博客 - 分享软件开发经验、技术心得和摄影作品";
const seoDescription = description || defaultDescription;

// Generate website structured data for homepage
const websiteStructuredData = Astro.url.pathname === '/' ? generateWebsiteStructuredData() : null;
---

<!DOCTYPE html>
<html lang={lang} class="h-full antialiased">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  
  <!-- Favicon -->
  <link rel="icon" type="image/x-icon" href="/favicon.ico" />
  <link rel="apple-touch-icon" href="/icons/512.png" />
  
  <link rel="canonical" href={canonicalURL} />
  
  <title>{title}</title>
  <meta name="description" content={seoDescription} />
  <meta name="generator" content={Astro.generator} />
  <meta name="author" content="Joey" />
  <meta name="robots" content="index, follow" />
  
  <!-- Open Graph -->
  <meta property="og:type" content="website" />
  <meta property="og:url" content={canonicalURL} />
  <meta property="og:title" content={title} />
  <meta property="og:description" content={seoDescription} />
  <meta property="og:site_name" content="Joey's Notes" />
  <meta property="og:locale" content={lang === 'zh' ? 'zh_CN' : 'en_US'} />
  {image && <meta property="og:image" content={new URL(image, Astro.site)} />}
  {image && <meta property="og:image:alt" content={title} />}
  
  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={title} />
  <meta name="twitter:description" content={seoDescription} />
  <meta name="twitter:creator" content="@oiahoon" />
  {image && <meta name="twitter:image" content={new URL(image, Astro.site)} />}
  
  <!-- Structured Data -->
  {websiteStructuredData && (
    <script type="application/ld+json" set:html={websiteStructuredData}></script>
  )}
  {structuredData && (
    <script type="application/ld+json" set:html={structuredData}></script>
  )}
  
  <!-- PWA -->
  <link rel="manifest" href="/manifest.json" />
  <meta name="theme-color" content="#f97316" />
  <meta name="apple-mobile-web-app-capable" content="yes" />
  <meta name="apple-mobile-web-app-status-bar-style" content="default" />
  <meta name="apple-mobile-web-app-title" content="Joey's Notes" />
  
  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>
<body class="flex h-full bg-zinc-50 dark:bg-black">
  <div class="flex w-full">
    <slot />
  </div>
  
  <!-- Service Worker Registration -->
  <script>
    if ('serviceWorker' in navigator) {
      window.addEventListener('load', () => {
        navigator.serviceWorker.register('/sw.js')
          .then((registration) => {
            console.log('SW registered: ', registration);
          })
          .catch((registrationError) => {
            console.log('SW registration failed: ', registrationError);
          });
      });
    }
  </script>
</body>
</html>
