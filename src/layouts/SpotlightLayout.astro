---
import BaseLayout from './BaseLayout.astro';
import SpotlightHeader from '../components/SpotlightHeader.astro';
import SpotlightFooter from '../components/SpotlightFooter.astro';

export interface Props {
  title: string;
  description?: string;
  image?: string;
  lang?: 'zh' | 'en';
  structuredData?: string;
}

const props = Astro.props;
---

<BaseLayout {...props}>
  <div class="min-h-screen">
    <SpotlightHeader />
    <main class="pb-24">
      <slot />
    </main>
    <SpotlightFooter />
  </div>
</BaseLayout>
