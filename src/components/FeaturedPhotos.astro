---
import featuredPhotos from '../data/featured-photos.json';
---

<section class="mt-16 sm:mt-20">
  <div class="mx-auto max-w-2xl lg:max-w-5xl">
    <header class="max-w-2xl">
      <h2 class="text-2xl font-bold tracking-tight text-zinc-800 sm:text-3xl dark:text-zinc-100">
        精选摄影作品
      </h2>
      <p class="mt-4 text-base text-zinc-600 dark:text-zinc-400">
        来自Unsplash的热门摄影作品，记录生活中的美好瞬间。
      </p>
    </header>
    
    <div class="mt-8 grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
      {featuredPhotos.map((photo) => (
        <div class="group relative overflow-hidden rounded-2xl bg-zinc-100 dark:bg-zinc-800">
          <img
            src={photo.url}
            alt={photo.alt}
            loading="lazy"
            decoding="async"
            class="aspect-[16/9] w-full object-cover transition duration-300 group-hover:scale-105"
            width="400"
            height="225"
          />
          
          <!-- 悬停遮罩 -->
          <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/0 to-black/0 opacity-0 transition-opacity duration-300 group-hover:opacity-100">
            <div class="absolute bottom-0 left-0 right-0 p-6">
              <h3 class="text-lg font-semibold text-white">
                {photo.title}
              </h3>
              <div class="mt-2 flex items-center justify-between text-sm text-white/80">
                <span class="flex items-center">
                  <svg class="mr-1 h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"></path>
                  </svg>
                  {photo.location}
                </span>
                <span class="flex items-center">
                  <svg class="mr-1 h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M10 12a2 2 0 100-4 2 2 0 000 4z"></path>
                    <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd"></path>
                  </svg>
                  {photo.views.toLocaleString()}
                </span>
              </div>
            </div>
          </div>
          
          <!-- 链接到Unsplash -->
          <a 
            href={`https://unsplash.com/photos/${photo.id}`}
            target="_blank"
            rel="noopener noreferrer"
            class="absolute inset-0"
            aria-label={`在Unsplash上查看${photo.title}`}
          >
            <span class="sr-only">在Unsplash上查看{photo.title}</span>
          </a>
        </div>
      ))}
    </div>
    
    <!-- 查看更多链接 -->
    <div class="mt-8 text-center">
      <a
        href="https://unsplash.com/@onice"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center rounded-full bg-zinc-100 px-4 py-2 text-sm font-medium text-zinc-600 transition hover:bg-zinc-200 dark:bg-zinc-800 dark:text-zinc-300 dark:hover:bg-zinc-700"
      >
        在Unsplash查看更多作品
        <svg class="ml-2 h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
        </svg>
      </a>
    </div>
  </div>
</section>
