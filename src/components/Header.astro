---
const currentPath = Astro.url.pathname;
---

<nav class="navbar">
  <div class="retro-container">
    <div class="nav-content">
      <a href="/" class="brand">
        Joey's Notes
      </a>

      <button class="mobile-toggle" id="mobile-toggle">
        <span></span>
        <span></span>
        <span></span>
      </button>

      <div class="nav-menu" id="nav-menu">
        <a href="/" class={`nav-link ${currentPath === '/' ? 'active' : ''}`}>首页</a>
        <a href="/tags/" class={`nav-link ${currentPath.startsWith('/tags') ? 'active' : ''}`}>标签</a>
        <a href="/about/" class={`nav-link ${currentPath === '/about/' ? 'active' : ''}`}>关于</a>
        <a href="/portfolio/" class={`nav-link ${currentPath === '/portfolio/' ? 'active' : ''}`}>作品</a>
      </div>
    </div>
  </div>
</nav>

<style>
  .navbar {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    background: rgba(10, 10, 10, 0.95);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid #333;
  }
  
  .nav-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 60px;
  }
  
  .brand {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--retro-orange);
    text-decoration: none;
  }
  
  .nav-menu {
    display: flex;
    gap: 32px;
    align-items: center;
  }
  
  .nav-link {
    color: var(--retro-text-muted);
    text-decoration: none;
    font-weight: 500;
    transition: color 0.2s ease;
  }
  
  .nav-link:hover,
  .nav-link.active {
    color: var(--retro-orange);
  }
  
  .mobile-toggle {
    display: none;
    flex-direction: column;
    background: none;
    border: none;
    cursor: pointer;
    padding: 4px;
  }
  
  .mobile-toggle span {
    width: 20px;
    height: 2px;
    background: var(--retro-text);
    margin: 2px 0;
    transition: 0.3s;
  }
  
  @media (max-width: 768px) {
    .mobile-toggle {
      display: flex;
    }
    
    .nav-menu {
      position: fixed;
      top: 60px;
      left: 0;
      right: 0;
      background: var(--retro-bg);
      flex-direction: column;
      padding: 20px;
      gap: 20px;
      transform: translateY(-100%);
      opacity: 0;
      visibility: hidden;
      transition: all 0.3s ease;
    }
    
    .nav-menu.active {
      transform: translateY(0);
      opacity: 1;
      visibility: visible;
    }
  }
</style>

<script>
  const mobileToggle = document.getElementById('mobile-toggle');
  const navMenu = document.getElementById('nav-menu');
  
  mobileToggle?.addEventListener('click', () => {
    navMenu?.classList.toggle('active');
  });
</script>
