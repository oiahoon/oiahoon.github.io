---
import { getCollection } from 'astro:content';
import SpotlightLayout from '../../layouts/SpotlightLayout.astro';

const posts = await getCollection('posts', ({ data }) => !data.draft);

// Get all tags and their counts
const tagCounts = new Map();
posts.forEach(post => {
  post.data.tags.forEach(tag => {
    tagCounts.set(tag, (tagCounts.get(tag) || 0) + 1);
  });
});

// Sort tags by count (descending)
const sortedTags = Array.from(tagCounts.entries())
  .sort(([,a], [,b]) => b - a);
---

<SpotlightLayout 
  title="标签 | Joey's Notes"
  description="浏览所有文章标签，按主题查找感兴趣的内容"
>
  <div class="sm:px-8 mt-16 lg:mt-32">
    <div class="mx-auto w-full max-w-7xl lg:px-8">
      <div class="relative px-4 sm:px-8 lg:px-12">
        <div class="mx-auto max-w-2xl lg:max-w-5xl">
          
          <!-- Header -->
          <header class="max-w-2xl">
            <h1 class="text-4xl font-bold tracking-tight text-zinc-800 sm:text-5xl dark:text-zinc-100">
              文章标签
            </h1>
            <p class="mt-6 text-base text-zinc-600 dark:text-zinc-400">
              共 {sortedTags.length} 个标签，{posts.length} 篇文章。
              点击标签查看相关文章。
            </p>
          </header>
          
          <!-- Tags Cloud -->
          <div class="mt-16 sm:mt-20">
            <div class="flex flex-wrap gap-4">
              {sortedTags.map(([tag, count]) => (
                <a 
                  href={`/tags/${tag}/`}
                  class="group relative rounded-full px-4 py-2 text-sm font-medium transition-colors hover:bg-zinc-100 dark:hover:bg-zinc-800"
                  style={`font-size: ${Math.min(1.25, 0.875 + count * 0.1)}rem;`}
                >
                  <span class="relative z-10 text-zinc-800 dark:text-zinc-200">
                    #{tag}
                  </span>
                  <span class="ml-2 text-xs text-zinc-500 dark:text-zinc-400">
                    ({count})
                  </span>
                  <span class="absolute inset-0 scale-95 rounded-full bg-zinc-50 opacity-0 transition group-hover:scale-100 group-hover:opacity-100 dark:bg-zinc-800/50"></span>
                </a>
              ))}
            </div>
          </div>
          
          <!-- All Tags List -->
          <div class="mt-16 sm:mt-20">
            <h2 class="text-xl font-semibold text-zinc-800 dark:text-zinc-100 mb-8">
              所有标签
            </h2>
            <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3">
              {sortedTags.map(([tag, count]) => (
                <a 
                  href={`/tags/${tag}/`}
                  class="group flex items-center justify-between rounded-lg border border-zinc-200 p-4 transition-colors hover:border-zinc-300 hover:bg-zinc-50 dark:border-zinc-700 dark:hover:border-zinc-600 dark:hover:bg-zinc-800/50"
                >
                  <div class="flex items-center">
                    <span class="text-sm font-medium text-zinc-800 dark:text-zinc-200">
                      #{tag}
                    </span>
                  </div>
                  <div class="flex items-center gap-2">
                    <span class="text-xs text-zinc-500 dark:text-zinc-400">
                      {count} 篇文章
                    </span>
                    <svg 
                      viewBox="0 0 16 16" 
                      fill="none" 
                      aria-hidden="true" 
                      class="h-4 w-4 stroke-zinc-400 transition group-hover:stroke-zinc-600 dark:stroke-zinc-500 dark:group-hover:stroke-zinc-400"
                    >
                      <path d="M6.75 5.75 9.25 8l-2.5 2.25" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path>
                    </svg>
                  </div>
                </a>
              ))}
            </div>
          </div>
          
        </div>
      </div>
    </div>
  </div>
</SpotlightLayout>
