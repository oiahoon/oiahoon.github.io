---
import { getCollection } from 'astro:content';
import SpotlightLayout from '../layouts/SpotlightLayout.astro';
import { getPreviewImage } from '../utils/extractFirstImage';

const posts = await getCollection('posts', ({ data }) => !data.draft);

const sortedPosts = posts.sort(
  (a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime(),
);

const latestPosts = sortedPosts.slice(0, 8);
const articleCount = sortedPosts.filter((post) => post.data.type !== 'photography').length;
const photoCount = sortedPosts.filter((post) => post.data.type === 'photography').length;
const tagCount = new Set(sortedPosts.flatMap((post) => post.data.tags || [])).size;

const latestPhotos = sortedPosts
  .filter((post) => post.data.type === 'photography' && (post.data.gallery?.[0]?.src || getPreviewImage(post)))
  .slice(0, 4);

const description =
  "分享软件开发经验、架构思考和摄影作品。内容以中文技术写作为主，强调可实践、可复用、可持续改进。";
---

<SpotlightLayout title="Joey's Notes | 黄药师的笔记本" description={description}>
  <section class="sm:px-8 mt-10 sm:mt-16">
    <div class="mx-auto w-full max-w-7xl lg:px-8">
      <div class="relative px-4 sm:px-8 lg:px-12">
        <div class="mx-auto max-w-2xl lg:max-w-5xl">
          <div class="relative overflow-hidden rounded-3xl border border-zinc-200/80 bg-gradient-to-br from-white via-zinc-50 to-orange-50/60 p-8 sm:p-10 dark:border-zinc-700/60 dark:from-zinc-900 dark:via-zinc-900 dark:to-zinc-800">
            <p class="inline-flex items-center rounded-full border border-orange-200 bg-orange-100/70 px-3 py-1 text-xs font-semibold tracking-wide text-orange-700 dark:border-orange-400/20 dark:bg-orange-500/10 dark:text-orange-300">
              Joey's Notes
            </p>
            <h1 class="mt-6 max-w-3xl text-3xl font-bold tracking-tight text-zinc-900 sm:text-5xl dark:text-zinc-100">
              更轻松地阅读技术与摄影内容
            </h1>
            <p class="mt-5 max-w-2xl text-base leading-7 text-zinc-600 dark:text-zinc-300">
              这里记录可落地的软件工程实践、问题排查过程和摄影观察。页面结构已开始重构，目标是让你更快定位内容，减少阅读负担。
            </p>

            <div class="mt-8 flex flex-wrap items-center gap-3">
              <a
                href="/articles/"
                class="rounded-xl bg-zinc-900 px-4 py-2.5 text-sm font-semibold text-white transition hover:bg-zinc-700 dark:bg-zinc-100 dark:text-zinc-900 dark:hover:bg-zinc-300"
              >
                浏览文章
              </a>
              <a
                href="/photography/"
                class="rounded-xl border border-zinc-300 bg-white px-4 py-2.5 text-sm font-semibold text-zinc-700 transition hover:border-zinc-400 hover:bg-zinc-50 dark:border-zinc-600 dark:bg-zinc-900 dark:text-zinc-200 dark:hover:border-zinc-500 dark:hover:bg-zinc-800"
              >
                查看摄影
              </a>
              <a href="/rss.xml" class="text-sm font-medium text-zinc-500 underline-offset-4 transition hover:text-orange-500 hover:underline dark:text-zinc-400 dark:hover:text-orange-300">
                RSS 订阅
              </a>
            </div>

            <dl class="mt-8 grid grid-cols-2 gap-3 sm:grid-cols-3">
              <div class="rounded-xl border border-zinc-200/70 bg-white/70 p-3 dark:border-zinc-700 dark:bg-zinc-800/70">
                <dt class="text-xs text-zinc-500 dark:text-zinc-400">文章</dt>
                <dd class="mt-1 text-xl font-semibold text-zinc-900 dark:text-zinc-100">{articleCount}</dd>
              </div>
              <div class="rounded-xl border border-zinc-200/70 bg-white/70 p-3 dark:border-zinc-700 dark:bg-zinc-800/70">
                <dt class="text-xs text-zinc-500 dark:text-zinc-400">摄影</dt>
                <dd class="mt-1 text-xl font-semibold text-zinc-900 dark:text-zinc-100">{photoCount}</dd>
              </div>
              <div class="rounded-xl border border-zinc-200/70 bg-white/70 p-3 dark:border-zinc-700 dark:bg-zinc-800/70 col-span-2 sm:col-span-1">
                <dt class="text-xs text-zinc-500 dark:text-zinc-400">标签</dt>
                <dd class="mt-1 text-xl font-semibold text-zinc-900 dark:text-zinc-100">{tagCount}</dd>
              </div>
            </dl>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="sm:px-8 mt-16 sm:mt-20">
    <div class="mx-auto w-full max-w-7xl lg:px-8">
      <div class="relative px-4 sm:px-8 lg:px-12">
        <div class="mx-auto max-w-2xl lg:max-w-5xl">
          <div class="flex items-end justify-between gap-4">
            <div>
              <h2 class="text-2xl font-bold tracking-tight text-zinc-900 sm:text-3xl dark:text-zinc-100">最新内容</h2>
              <p class="mt-2 text-sm text-zinc-600 dark:text-zinc-400">优先展示最近发布，减少跳转层级。</p>
            </div>
            <a href="/articles/" class="hidden text-sm font-medium text-zinc-500 transition hover:text-orange-500 dark:text-zinc-400 dark:hover:text-orange-300 sm:block">
              查看全部文章
            </a>
          </div>

          <div class="mt-8 grid grid-cols-1 gap-6 sm:grid-cols-2">
            {latestPosts.map((post, index) => {
              const previewImage = getPreviewImage(post);
              const isPhotography = post.data.type === 'photography';
              const summary = post.data.description || post.data.subtitle || '点击查看完整内容。';

              return (
                <article class="group overflow-hidden rounded-2xl border border-zinc-200/80 bg-white transition hover:-translate-y-0.5 hover:border-zinc-300 hover:shadow-sm dark:border-zinc-700 dark:bg-zinc-900 dark:hover:border-zinc-500">
                  {previewImage && (
                    <a href={`/posts/${post.slug}/`} class="block">
                      <img
                        src={previewImage}
                        alt={post.data.title || '文章预览图'}
                        class="aspect-[16/9] w-full object-cover"
                        loading={index < 2 ? 'eager' : 'lazy'}
                        decoding="async"
                      />
                    </a>
                  )}

                  <div class="p-5">
                    <div class="flex items-center gap-2">
                      <span class={`rounded-full px-2.5 py-1 text-xs font-semibold ${
                        isPhotography
                          ? 'bg-orange-100 text-orange-700 dark:bg-orange-500/15 dark:text-orange-300'
                          : 'bg-zinc-100 text-zinc-700 dark:bg-zinc-800 dark:text-zinc-300'
                      }`}>
                        {isPhotography ? '摄影' : '文章'}
                      </span>
                      <time class="text-xs text-zinc-500 dark:text-zinc-400" datetime={post.data.date.toISOString()}>
                        {post.data.date.toLocaleDateString('zh-CN')}
                      </time>
                    </div>

                    <h3 class="mt-3 text-lg font-semibold leading-7 text-zinc-900 dark:text-zinc-100">
                      <a href={`/posts/${post.slug}/`} class="transition group-hover:text-orange-600 dark:group-hover:text-orange-300">
                        {post.data.title}
                      </a>
                    </h3>

                    <p class="mt-2 text-sm leading-6 text-zinc-600 dark:text-zinc-400">{summary}</p>

                    <a href={`/posts/${post.slug}/`} class="mt-4 inline-flex items-center text-sm font-semibold text-orange-600 dark:text-orange-300">
                      {isPhotography ? '查看作品' : '继续阅读'}
                      <span class="ml-1">→</span>
                    </a>
                  </div>
                </article>
              );
            })}
          </div>
        </div>
      </div>
    </div>
  </section>

  {latestPhotos.length > 0 && (
    <section class="sm:px-8 mt-16 sm:mt-20">
      <div class="mx-auto w-full max-w-7xl lg:px-8">
        <div class="relative px-4 sm:px-8 lg:px-12">
          <div class="mx-auto max-w-2xl lg:max-w-5xl">
            <div class="flex items-end justify-between gap-4">
              <div>
                <h2 class="text-2xl font-bold tracking-tight text-zinc-900 sm:text-3xl dark:text-zinc-100">近期摄影</h2>
                <p class="mt-2 text-sm text-zinc-600 dark:text-zinc-400">保持视觉入口简洁，仅展示最近作品。</p>
              </div>
              <a href="/photography/" class="hidden text-sm font-medium text-zinc-500 transition hover:text-orange-500 dark:text-zinc-400 dark:hover:text-orange-300 sm:block">
                浏览摄影归档
              </a>
            </div>

            <div class="mt-8 grid grid-cols-2 gap-4 sm:grid-cols-4">
              {latestPhotos.map((photo) => {
                const photoUrl = photo.data.gallery?.[0]?.src || getPreviewImage(photo);
                return (
                  <a href={`/posts/${photo.slug}/`} class="group block overflow-hidden rounded-xl border border-zinc-200/80 bg-zinc-100 dark:border-zinc-700 dark:bg-zinc-800">
                    <img
                      src={photoUrl!}
                      alt={photo.data.title || '摄影作品'}
                      class="aspect-[4/5] w-full object-cover transition duration-300 group-hover:scale-105"
                      loading="lazy"
                      decoding="async"
                    />
                  </a>
                );
              })}
            </div>
          </div>
        </div>
      </div>
    </section>
  )}
</SpotlightLayout>
