---
import { getCollection } from 'astro:content';
import SpotlightLayout from '../layouts/SpotlightLayout.astro';
import { getPreviewImage } from '../utils/extractFirstImage';

const photos = await getCollection('posts', ({ data }) => {
  return !data.draft && data.type === 'photography';
});

const sortedPhotos = photos.sort((a, b) => 
  new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
);
---

<SpotlightLayout 
  title="摄影作品 | Joey's Notes"
  description="我的摄影作品集，记录生活中的美好瞬间。"
  lang="zh"
>
  <div class="sm:px-8 mt-16 sm:mt-32">
    <div class="mx-auto w-full max-w-7xl lg:px-8">
      <div class="relative px-4 sm:px-8 lg:px-12">
        <div class="mx-auto max-w-2xl lg:max-w-5xl">
          
          <!-- Header -->
          <header class="max-w-2xl">
            <h1 class="text-4xl font-bold tracking-tight text-zinc-800 sm:text-5xl dark:text-zinc-100">
              摄影作品
            </h1>
            <p class="mt-6 text-base text-zinc-600 dark:text-zinc-400">
              用镜头记录生活中的美好瞬间，分享我眼中的世界。
            </p>
          </header>

          <!-- Masonry Grid -->
          <div class="mt-16 sm:mt-20">
            <div class="columns-1 gap-4 sm:columns-2 lg:columns-3 space-y-4">
              {sortedPhotos.map((photo) => {
                const photoUrl = photo.data.gallery?.[0]?.src || getPreviewImage(photo);
                return photoUrl && (
                  <div class="break-inside-avoid">
                    <a 
                      href={`/posts/${photo.slug}/`}
                      class="group relative block overflow-hidden rounded-2xl bg-zinc-100 dark:bg-zinc-800"
                    >
                      <img 
                        src={photoUrl}
                        alt={photo.data.title || '摄影作品'}
                        class="w-full h-auto object-cover transition duration-300 group-hover:scale-105"
                        loading="lazy"
                      />
                      
                      <!-- Hover overlay with metadata -->
                      <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/0 to-black/0 opacity-0 transition-opacity duration-300 group-hover:opacity-100">
                        <div class="absolute bottom-0 left-0 right-0 p-4">
                          {photo.data.camera?.model && (
                            <div class="flex items-center gap-2 text-sm text-white/90">
                              <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z" />
                              </svg>
                              <span>{photo.data.camera.model}</span>
                            </div>
                          )}
                          {photo.data.publishedDate && (
                            <div class="mt-2 text-xs text-white/70">
                              {photo.data.publishedDate}
                            </div>
                          )}
                        </div>
                      </div>
                    </a>
                  </div>
                );
              })}
            </div>
          </div>
          
        </div>
      </div>
    </div>
  </div>
</SpotlightLayout>
